{
  "name": "@shoplflow/base",
  "version": "0.9.0",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "type-check": "tsc --noEmit || true",
    "build:tokens": "node scripts/generate-tokens.cjs",
    "build:package": "tsup",
    "build:component": "scripts/generate-component.sh",
    "build:storybook": "storybook build",
    "build": "pnpm run build:package && pnpm run build:storybook",
    "dev:stories": "storybook dev -p 6007",
    "dev": "tsup --watch",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build"
  },
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/styles/global.css",
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "styles"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@emotion/react": "*",
    "@emotion/styled": "*",
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.22.19",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@emotion/babel-plugin": "^11.11.0",
    "@emotion/react": "11.10.8",
    "@emotion/styled": "11.10.8",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@storybook/addon-actions": "^7.4.1",
    "@storybook/addon-backgrounds": "^7.4.1",
    "@storybook/addon-controls": "^7.4.1",
    "@storybook/addon-docs": "^7.4.1",
    "@storybook/addon-essentials": "^7.4.1",
    "@storybook/addon-interactions": "^7.4.1",
    "@storybook/addon-links": "^7.4.1",
    "@storybook/addon-mdx-gfm": "^7.4.1",
    "@storybook/addon-measure": "^7.4.1",
    "@storybook/addon-outline": "^7.4.1",
    "@storybook/addon-toolbars": "^7.4.1",
    "@storybook/addon-viewport": "^7.4.1",
    "@storybook/addons": "^7.4.1",
    "@storybook/blocks": "^7.4.1",
    "@storybook/react": "^7.4.1",
    "@storybook/react-vite": "^7.4.1",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/theming": "^7.4.1",
    "@types/node": "20.4.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "esbuild": "0.18.17",
    "esbuild-plugin-babel": "^0.2.3",
    "esbuild-plugin-d.ts": "^1.1.0",
    "eslint": "^8.49.0",
    "eslint-plugin-storybook": "^0.6.13",
    "framer-motion": "^10.12.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.4.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "tsup": "7.2.0",
    "typescript": "4.7.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "dependencies": {
    "@shoplflow/utils": "workspace:^",
    "classnames": "^2.3.2",
    "framer-motion": "10.12.6",
    "react-custom-scrollbars-2": "^4.5.0",
    "zustand": "^4.4.1"
