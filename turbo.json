{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "build:package": {
      "outputs": [
        "dist/**",
        "!.next/cache/**"
      ]
    },
    "build:docs": {
      "dependsOn": [
        "^build",
        "build:package"
      ]
    },
    "build:storybook": {
      "dependsOn": [
        "build:package"
      ],
      "outputs": [
        "dist/**",
        "storybook-static/**"
      ]
    },
    "lint": {

    },
    "test": {

    },
    "type-check": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:stories": {
      "persistent": true,
      "cache": false
    },
    "dev:storybook": {
      "persistent": true,
      "cache": false
    },
    "dev:docs": {
      "persistent": true,
      "cache": false
    }
  }
}
