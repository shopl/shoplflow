{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build:illustrations": {
      "cache": false
    },
    "build:icons": {
      "cache": false
    },
    "build:assets": {
      "dependsOn": [
        "build:illustrations",
        "build:icons"
      ],
      "cache": false,
      "outputs": [
        "dist/**"
      ]
    },
    "build:mdx": {},
    "build:docs": {
      "dependsOn": [
        "^build:docs",
        "build:mdx",
        "build:assets",
        "build:package"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:package": {
      "dependsOn": [
        "^build:package",
        "build:illustrations",
        "build:icons",
        "build:assets"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:storybook": {
      "dependsOn": [
        "build:package"
      ],
      "outputs": [
        "storybook-static/**"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "build:package"
      ],
      "outputs": [
        "dist/**",
        "!.next/cache/**"
      ]
    },
    "//#lint": {},
    "test": {},
    "type-check": {},
    "//#dev": {
      "cache": false,
      "persistent": true
    },
    "//#dev:stories": {
      "persistent": true,
      "cache": false
    },
    "//#dev:storybook": {
      "persistent": true,
      "cache": false
    },
    "//#dev:docs": {
      "persistent": true,
      "cache": false
    }
  }
}
