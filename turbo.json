{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build:illustrations": {
      "cache": false
    },
    "build:icons": {
      "cache": false
    },
    "build:assets": {
      "dependsOn": [
        "build:illustrations",
        "build:icons"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:package": {
      "dependsOn": [
        "^build:package",
        "build:illustrations",
        "build:icons",
        "build:assets"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:storybook": {
      "dependsOn": [
        "build:package"
      ],
      "outputs": [
        "storybook-static/**"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "build:package"
      ],
      "outputs": [
        "dist/**",
        "storybook-static/**"
      ]
    },
    "build:mdx": {},
    "lint": {},
    "test": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:stories": {
      "cache": false,
      "persistent": true
    },
    "dev:storybook": {
      "cache": false,
      "persistent": true
    }
  }
}
